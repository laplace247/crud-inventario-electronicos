<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/header') %>

        <div class="container mt-5">
            <h1 class="text-center mb-4">Lista de Productos</h1>
            <div class="d-flex justify-content-end mb-3">
                <a href="/productos/crear" class="btn btn-primary">Crear Producto</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="text-center align-middle">
                    <% productos.forEach(producto=> { %>
                        <tr>
                            <td>
                                <%= producto.id %>
                            </td>
                            <td>
                                <%= producto.nombre %>
                            </td>
                            <td>S/ <%= producto.precio.toFixed(2) %>
                            </td>
                            <td>
                                <%= producto.stock %>
                            </td>
                            <td>
                                <% if (producto.imagen) { %>
                                    <img src="/uploads/<%= producto.imagen %>" width="60" height="60"
                                        style="object-fit: cover;">
                                    <% } else { %>
                                        <span class="text-muted">Sin imagen</span>
                                        <% } %>
                            </td>
                            <td>
                                <a href="/productos/ver/<%= producto.id %>" class="btn btn-info">Detalles</a>
                                <a href="/productos/editar/<%= producto.id %>" class="btn btn-warning">Editar</a>
                                <form action="/productos/eliminar/<%= producto.id %>" method="POST"
                                    style="display:inline; padding: 0;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Â¿Seguro que deseas eliminar este producto?')">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('../partials/footer') %>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/scripts.js"></script>
</body>

</html>