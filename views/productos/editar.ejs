<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Producto</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow" style="max-width: 450px; width: 100%;">
            <div class="card-header text-white text-center">
                <h2 class="mb-0">Editar Producto</h2>
            </div>
            <div class="card-body">
                <% if (typeof mensaje !== 'undefined') { %>
                    <div class="alert alert-success text-center" role="alert">
                    <%= mensaje %>
                    </div>
                <% } %>
                <form action="/productos/actualizar/<%= producto.id %>" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="nombre" class="form-label fw-bold">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="precio" class="form-label fw-bold">Precio:</label>
                        <input type="number" step="0.01" class="form-control" id="precio" name="precio" value="<%= producto.precio %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label fw-bold">Stock:</label>
                        <input type="number" class="form-control" id="stock" name="stock" value="<%= producto.stock %>" required>
                    </div>
                    <div class="mb-3 text-center">
                        <label class="form-label fw-bold">Imagen actual:</label><br>
                        <% if (producto.imagen) { %>
                            <img src="/uploads/<%= producto.imagen %>" alt="" style="width: 150px; height: 150px; object-fit: cover; border-radius: 8px; border: 1px solid #ccc;"><br>
                            <input type="hidden" name="imagenActual" value="<%= producto.imagen %>">
                        <% } else { %>
                            <p>No hay imagen disponible.</p>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <label for="imagen" class="form-label fw-bold">Selecciona una imagen:</label>
                        <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">Actualizar Producto</button>
                        <a href="/productos/listar" class="btn btn-secondary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>